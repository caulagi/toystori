
#masthead
  .pull-right
    if (req.isAuthenticated())
      .dropdown
        a(data-toggle="dropdown", href="#").dropdown-toggle
          img(src="https://graph.facebook.com/#{req.user.facebook.id}/picture", alt="Profile image")
        ul(role="menu").dropdown-menu.pull-right
          li
            a(href="/meetups/new") Create new event
          li.divider
          li
            a(href="/users/"+req.user.id, title="Profile") Profile
          li.divider
          li
            a(href="/logout", title="logout") Logout
    else
      ul.nav.nav-pills
        li
          .input-prepend
            span.add-on
              i.icon-user
            a(href="/login", class="btn") Login or signup
        li &nbsp;
        li
          a(href="/meetups/new")
            i.icon-plus-sign
            | &nbsp;Create new event
  h1
    a.brand(href='/') sntd:
    span.subheading Something New To Do
